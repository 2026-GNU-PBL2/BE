<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pbl2.sub119.backend.test.mapper.TestMapper">

    <resultMap id="TestResultMap" type="pbl2.sub119.backend.test.vo.TestVO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="amount" column="amount"/>
    </resultMap>

    <select id="selectById" parameterType="long" resultMap="TestResultMap">
        SELECT id, name, amount
        FROM test
        WHERE id = #{id}
    </select>

</mapper>